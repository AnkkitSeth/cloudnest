<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - CloudNest</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to right, #0f172a, #1e293b);
      }
    </style>
  </head>
  <body
    class="min-h-screen flex flex-col justify-center items-center px-4"
  >
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="bg-red-100 text-red-700 p-4 rounded-lg w-full max-w-md mb-6 shadow-lg">
        <% errors.forEach(error => { %>
          <p><%= error.msg %></p>
        <% }) %>
      </div>
    <% } %>

    <form
      action="/user/login"
      method="post"
      class="bg-gray-900 bg-opacity-80 backdrop-blur-md p-8 rounded-xl shadow-xl w-full max-w-md text-white"
    >
      <h2 class="text-3xl font-extrabold mb-6 text-center text-sky-400">Login to <span class="text-white">CloudNest</span></h2>

      <div class="mb-5">
        <label for="username" class="block mb-2 font-semibold text-sky-300">User Name</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="John"
          required
          class="w-full rounded-lg p-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-sky-500"
        />
      </div>

      <div class="mb-7">
        <label for="password" class="block mb-2 font-semibold text-sky-300">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="•••••••••"
          required
          class="w-full rounded-lg p-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-sky-500"
        />
      </div>

      <button
        type="submit"
        class="w-full bg-sky-400 hover:bg-sky-500 text-gray-900 font-bold py-3 rounded-full transition-colors duration-300"
      >
        Submit
      </button>

      <p class="mt-6 text-center text-sky-300">
        Not registered? 
        <button
          type="button"
          onclick="window.location.href='/user/register'"
          class="underline hover:text-sky-400 font-semibold"
        >
          Register here
        </button>
      </p>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>
